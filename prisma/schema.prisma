// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["interactiveTransactions"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Docente {
    id              Int         @id @default(autoincrement())
    cf              String      @unique
    nome            String
    cognome         String
    email           String      @unique
    alunni          Alunno[]
    admin           Boolean     @default(false)
    password        String
    lezioni         Lezione[]
//    oreDiLavoro     Int         @default(0)
//    oreRecuperare   Int         @default(0)
}

model Alunno {
    id             Int     @id @default(autoincrement())
    cf             String  @unique
    nome           String
    cognome        String
    email          String  @unique
    docente        Docente @relation(fields: [docenteId], references: [id])
    docenteId      Int
    annoCorso      Int
    annoIscrizione String
    lezioni        Lezione[]
}

model Lezione {
    id             Int       @id @default(autoincrement())
    docente        Docente   @relation(fields: [docenteId], references: [id])
    docenteId      Int
    alunni         Alunno[]
    orarioDiInizio DateTime
    orarioDiFine   DateTime
    libretto       Libretto?
    note           String?
    recuperoId     Int?      @unique
    recupero       Lezione?  @relation("LezioneDiRecupero", fields: [recuperoId], references: [id])
    recuperata     Lezione?  @relation("LezioneDiRecupero")

    @@unique([docenteId, orarioDiInizio, orarioDiFine])
}

enum Libretto {
  PRESENTE
  ASSENTE_GIUSTIFICATO
  ASSENTE_NON_GIUSTIFICATO
  LEZIONE_SALTATA
}
